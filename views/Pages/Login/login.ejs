<div class="container-fluid d-flex justify-content-center align-items-center" style="height: 100vh;">
    <div class="card shadow-lg border-0 rounded-4"
        style="max-width: 1000px; width: 100%; height: auto; 
               background: rgba(255, 255, 255, 0.400); /* More transparent */
               backdrop-filter: blur(10px); /* Frosted Glass Effect */
               -webkit-backdrop-filter: blur(10px); /* Safari support */
               border: 1px solid rgba(255, 255, 255, 0.2); /* Subtle border */">
        <div class="row g-0">
            <!-- Left Side: Form -->
            <div class="col-md-6 d-flex align-items-center">
                <div class="card-body text-center">
                    <!-- Centered Image with Rounded Corners -->
                    <div class="d-flex justify-content-center mb-3">
                        <img src="https://i.postimg.cc/prz1zv1m/image.png"
                            style="width: 160px; height: 160px; border-radius: 10px; margin-top: 60px;">
                    </div>                    
                    <h2 class="fw-bold" style="color: #77513B;">LOGIN PORTAL</h2>
                    <br><br>
                    <div class="form-container">
                        <form id="login-form" action="/login" method="POST">
                            <!-- Username input -->
                            <div class="mb-3">
                                <input type="text" class="form-control" id="username" name="username" placeholder="Username" required>
                            </div>
                    
                            <!-- Password input -->
                            <div class="mb-3">
                                <div class="input-group">
                                    <input type="password" class="form-control" id="password" name="password" placeholder="Password" required>
                                    <span class="input-group-text" id="toggle-password" onclick="togglePasswordVisibility()">
                                        <i class="bi bi-eye-slash" id="eye-icon"></i>
                                    </span>
                                </div>
                            </div>
                            <br>
                            <!-- Login button -->
                            <button type="submit" class="btn btn-sm w-100" style="background-color:#EA9567; color:white;">Log In</button>
                        </form>
                    </div>
                    
                    
                </div>
            </div>

            <!-- Right Side: Background Image with Rounded Corners -->
            <div class="col-md-6 d-flex justify-content-center align-items-center rounded-end"
                style="background: url('https://i.postimg.cc/yYPCbhvk/image.png') center/cover; border-top-right-radius: 10px; border-bottom-right-radius: 10px;">
            </div>
        </div>
    </div>
</div>
